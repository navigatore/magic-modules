resource "google_project" "project" {
  provider = google-beta

  name            = "{{index $.Vars "project_name"}}"
  project_id      = "{{index $.Vars "project_name"}}"
  org_id          = "{{index $.TestEnvVars "org_id"}}"
  billing_account = "{{index $.TestEnvVars "billing_account"}}"
  deletion_policy = "DELETE"
}

# Enable dataform API
resource "google_project_service" "dataform" {
  provider = google-beta

  project = google_project.project.project_id
  service = "dataform.googleapis.com"
}

# 1. Create a minimal repository to trigger the JIT creation of the Service Agent.
# In Dataform, git_remote_settings is optional, so a local-only repo is enough.
resource "google_dataform_repository" "trigger_repo" {
  provider = google-beta

  project = google_project.project.project_id
  region  = "us-central1"
  name    = "trigger-repository"

  depends_on = [
    google_project_service.dataform
  ]
}

resource "google_kms_key_ring" "keyring" {
  provider = google-beta
  
  name     = "{{index $.Vars "key_ring_name"}}"
  location = "us-central1"
}

resource "google_kms_crypto_key" "example_key" {
  provider = google-beta
  
  name            = "{{index $.Vars "crypto_key_name"}}"
  key_ring        = google_kms_key_ring.keyring.id
}

resource "google_kms_crypto_key_iam_binding" "crypto_key_binding" {
  provider = google-beta

  crypto_key_id = google_kms_crypto_key.example_key.id
  role          = "roles/cloudkms.cryptoKeyEncrypterDecrypter"

  members = [
    "serviceAccount:service-${google_project.project.number}@gcp-sa-dataform.iam.gserviceaccount.com",
  ]

  # Ensure the identity is created before applying the binding
  depends_on = [
    google_dataform_repository.trigger_repo
  ]
}

resource "google_dataform_config" "{{$.PrimaryResourceId}}" {
  provider = google-beta
  
  region = "us-central1"
  default_kms_key_name = google_kms_crypto_key.example_key.id

  depends_on = [
    google_kms_crypto_key_iam_binding.crypto_key_binding
  ]
}
